{% extends "base.html.twig" %}

{% block title post.title %}

{% block body %}
	<a href="{{ path('blog_index') }}"><-- Retour</a>
	<h1>{{ post.title }}</h1>
	<p class="text-muted">Publié le {{ post.createdAt|date('d/m/Y \\à H\\hi') }} par {{ post.user.fullname }}</p>
	<div>
		{{ post.content|nl2br }}
	</div>
{% endblock %}
