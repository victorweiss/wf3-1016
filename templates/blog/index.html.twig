{% extends "base.html.twig" %}

{% block title %}
	Blog
{% endblock %}

{% block body %}
	<h1>Blog</h1>

	<div class="row mt-5">
		{% for post in pagination %}
			<div class="col-md-4 col-lg-3 mb-4">
				<div class="card">
{#					<img src="..." class="card-img-top" alt="...">#}
					<div class="card-body">
						<h5 class="card-title">{{ post.title|ellipsis(20) }}</h5>
						<p class="card-text">{{ post.content|ellipsis(70) }}</p>
						<a href="{{ path('blog_view', {slug: post.slug}) }}" class="btn btn-primary">Lire l'article</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

	{{ knp_pagination_render(pagination) }}
{% endblock %}
